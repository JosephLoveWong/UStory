<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:layout_gravity="center"
              android:background="@drawable/nav_item_ripple_selector"
              android:orientation="horizontal"
              android:paddingBottom="@dimen/navdrawer_row_image_margin_top"
              android:paddingEnd="@dimen/navdrawer_row_margin"
              android:paddingStart="@dimen/navdrawer_row_margin"
              android:paddingTop="@dimen/navdrawer_row_image_margin_top">

    <ImageView
        android:id="@+id/drawer_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/navdrawer_row_image_margin_right"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"/>

    <TextView
        android:id="@+id/drawer_item_title"
        style="@style/Font.H3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"/>
</LinearLayout>
