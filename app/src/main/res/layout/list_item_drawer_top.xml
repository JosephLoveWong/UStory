<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end"
              android:layout_marginBottom="@dimen/navdrawer_header_margin_bottom"
              android:layout_marginEnd="@dimen/navdrawer_header_margin_right"
              android:layout_marginStart="@dimen/navdrawer_row_margin"
              android:layout_marginTop="@dimen/navdrawer_header_margin_top">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/ks_logo_black_plain"/>
</LinearLayout>
