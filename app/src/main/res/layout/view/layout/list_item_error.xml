<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/profile_grid_container_error"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5.0"/>

    <TextView
        style="@style/Font.H1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:text="@string/error_state_fullscreen_title"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/error_state_full_screen"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"/>

    <TextView
        android:id="@+id/error_text"
        style="@style/Font"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:text="@string/network_alert_view_title"/>

    <TextView
        android:id="@+id/btn_try_again"
        style="@style/ButtonStyleFlat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text_button_ripple_selector"
        android:gravity="center_horizontal"
        android:text="@string/try_again"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.0"/>
</LinearLayout>
