<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">

    <com.promiseland.ustory.ui.widget.RecyclerViewForVerticalScrollChildren
        android:id="@+id/recycler_view_inner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"/>

    <ViewStub
        android:id="@+id/loading_stub"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/list_item_loading"/>

    <ViewStub
        android:id="@+id/error_stub"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ViewStub
        android:id="@+id/empty_stub"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>
