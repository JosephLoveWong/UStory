<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 状态栏、导航栏透明 -->
    <style name="AppTransparent" parent="AppTheme.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">#40000000</item>
    </style>

    <style name="google_button" parent="UStory.Button.Colored">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:colorButtonNormal">@color/blue_3</item>
        <item name="android:colorControlHighlight">@color/blue_3</item>
    </style>

    <style name="facebook_button" parent="UStory.Button.Colored">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

</resources>